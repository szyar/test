<% if notice %>
  <p id="notice"><%= notice %></p>
<% end %>

<h2>Post Details</h2>

<div class="card">
  <div class="card-header">
    <p>
      <%= @post.title %>
    </p>
  </div>

  <p>
    <%= @post.body %>
  </p>

</div>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
